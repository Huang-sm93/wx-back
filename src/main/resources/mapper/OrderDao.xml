<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wx.appbackend.product.dao.OrderDao">
    <resultMap id="BaseResultMap" type="com.wx.appbackend.product.entity.OrderInfo">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="type" jdbcType="INTEGER" property="type"/>
        <result column="count" jdbcType="VARCHAR" property="count"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, name, type, count
    </sql>
    <update id="update">
        update product_info
        set count = #{count,jdbcType=INTEGER}
        where id = #{id,jdbcType=BIGINT}
    </update>
    <select id="get" resultType="com.wx.appbackend.product.entity.OrderInfo">
        select
        <include refid="Base_Column_List"/>
        from product_info
        where id = #{key,jdbcType=BIGINT}
    </select>
</mapper>